<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_restaurant_profile">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/third_restaurant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/restaurantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_pic"
        android:text="Restaurant's Name"
        android:textAlignment="center"
        android:textSize="25dp"
        android:paddingTop="25dp"
        android:textColor="@color/background"

        />


    <TextView
        android:id="@+id/restaurantManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName"
        android:text="Managed By ...."
        android:textAlignment="center"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/background"

        />

    <TextView
        android:id="@+id/restaurantExperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/restaurantManager"
        android:text=".... years of experience"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/background"

        />


    <TextView
        android:id="@+id/restaurantType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Type"
        android:paddingTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantExperience"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shapes"
        android:ems="22"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:text="Ex Italian food"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/restaurantType"
        app:layout_constraintTop_toBottomOf="@+id/restaurantType" />

    <TextView
        android:id="@+id/restaurantDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapes"
        android:ems="22"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:text="This is a very good restaurant"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/restaurantDescription"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription"
        />

    <TextView
        android:id="@+id/restaurantOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Offer"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/Offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapes"
        android:ems="22"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:text="Roman Pasta"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/restaurantOffer"
        app:layout_constraintTop_toBottomOf="@+id/restaurantOffer"
        />

    <Button
        android:id="@+id/btnRequestTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request A Table"
        app:layout_constraintStart_toStartOf="@+id/Offer"
        app:layout_constraintTop_toBottomOf="@id/Offer"
        android:layout_marginTop="10dp"
        android:ems="22"
        style="@style/btnBarrown"

        />
</androidx.constraintlayout.widget.ConstraintLayout>