<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="100dp"
        android:paddingTop="65dp"
        android:text="Country:"
        android:textColor="@color/grayText"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="@+id/edEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvPass" />

    <EditText
        android:id="@+id/edCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:background="@drawable/shapes"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:text="Enter full name..."
        android:textColor="@color/PlaceholderText"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFullName" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:textSize="35dp"
        android:textAlignment="center"
        android:paddingTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"


        />


    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"

        android:paddingTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:textSize="20sp"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/edEmail"
        />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapes"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:text="Enter Email..."
        android:textColor="@color/PlaceholderText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

//Second Field

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:paddingTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        android:textSize="20sp"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/edEmail"

        />

    <EditText
        android:id="@+id/edPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapes"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:text="Enter Password..."
        android:textColor="@color/PlaceholderText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tvPass" />

    //Third field


    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"
        android:paddingTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPass"
        android:textSize="20sp"
        android:textColor="@color/grayText"
        app:layout_constraintLeft_toLeftOf="@+id/edEmail"

        />

    <EditText
        android:id="@+id/edFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shapes"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:text="Enter full name..."
        android:textColor="@color/PlaceholderText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tvFullName" />


    <Button
        android:id="@+id/tvSignUp"
        style="@style/btnTransparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:ems="22"
        android:text="Suin Up"
        app:layout_constraintStart_toStartOf="@+id/edFullName"
        app:layout_constraintTop_toBottomOf="@id/edFullName"

        />

    <Button
        android:id="@+id/tvHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALREADY HAVE AN ACCOUNT?"
        android:layout_marginTop="60dp"
        android:ems="22"
        android:backgroundTint="@color/white"
        android:textColor="@color/grayText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="45dp"



        />

</androidx.constraintlayout.widget.ConstraintLayout>