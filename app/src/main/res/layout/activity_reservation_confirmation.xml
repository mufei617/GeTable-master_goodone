<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_reservation_confirmation"
>

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="590dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/submit_confirmation_img"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/getablelogo"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"/>

    <TextView
        android:id="@+id/txtMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GeTable Reserved The Table!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/logo_image"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txtMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Check Your Reserved Table To Get Your Code."
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage1"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOT IT!"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        style="@style/btnTransparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:height="60dp"
        android:width="200dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>